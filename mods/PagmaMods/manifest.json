                "TYPING_ENTER":
                [
                    "keyboard/mechEnter.mp3"
                ],
                "TYPING_LETTER":
                [
                    "keyboard/mech1.mp3",
                    "keyboard/mech2.mp3",
                    "keyboard/mech3.mp3",
                    "keyboard/mech4.mp3"
                ],
                "TYPING_SPACE":
                [
                    "keyboard/mechSpace.mp3"
                ]
            },
            "page_styles":
            [
                {
                    "css":
                    [
                        "webmodding/opera.css"
                    ],
                    "matches":
                    [
                        "https://*.opera.com/*"
                    ]
                }
            ],
            "shaders":
            {
                "Matrix green":
                {
                    "path": "shader/matrix.txt"
                },
                "Wave":
                {
                    "animation":
                    {
                        "duration": 60,
                        "steps": 3600
                    },
                    "path": "shader/wave.txt"
                }
            },
            "theme":
            {
                "dark":
