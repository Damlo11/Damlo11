                },
                "light":
                {
                    "gx_accent":
                    {
                        "h": 307,
                        "s": 100,
                        "l": 42
                    },
                    "gx_secondary_base":
                    {
                        "h": 236,
                        "s": 100,
                        "l": 42
                    }
                }
            },
            "wallpaper":
            {
                "dark":
                {   
                    "image": "wallpaper/Lost Sky.webm",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#757575"
